source 'https://rubygems.org'

gemspec

group :development, :test do
  # Debugger
  gem 'pry'

  # Ruby Testing
  gem 'spork'
  gem 'rspec'
  gem 'mocha', :require => false

  # JS Change Detection 
  gem 'filewatcher'
  gem 'rb-inotify', :require => false
  gem 'rb-fsevent', :require => false
  gem 'rb-fchange', :require => false

  # JS Testing
  gem 'sprockets'
  gem 'execjs'
  gem 'coffee-script'
  gem 'jasmine'
end
